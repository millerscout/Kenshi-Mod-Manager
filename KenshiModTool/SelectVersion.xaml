<Window x:Class="KenshiModTool.SelectVersion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KenshiModTool"
        mc:Ignorable="d"
        Title="SelectVersion" Height="80" Width="280" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid  HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Older Version" HorizontalAlignment="Left"  VerticalAlignment="Center" Click="OldVersion" Margin="15,0,0,0"/>
        <Button x:Name="button1" Content="Newer Version" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Click="NewVersion" Margin="15,0,0,0"/>

    </Grid>
</Window>
